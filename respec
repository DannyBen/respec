# :command.parse_requirements
respec_last_parse_requirements() {
  # :command.fixed_flags_filter
  while [[ $# -gt 0 ]]; do
    case "${1:-}" in
      --help | -h)
        long_usage=yes
        respec_last_usage
        exit
        ;;

      *)
        break
        ;;

    esac
  done

  # :command.dependencies_filter
  if command -v rspec >/dev/null 2>&1; then
    deps['rspec']="$(command -v rspec | head -n1)"
  else
    printf "missing dependency: rspec\n" >&2
    printf "%s\n" "Install using $(magenta gem install rspec)" >&2
    exit 1
  fi

  if command -v bundler >/dev/null 2>&1; then
    deps['bundler']="$(command -v bundler | head -n1)"
  else
    printf "missing dependency: bundler\n" >&2
    printf "%s\n" "Install using $(magenta gem install bundler)" >&2
    exit 1
  fi

  if command -v filewatcher >/dev/null 2>&1; then
    deps['filewatcher']="$(command -v filewatcher | head -n1)"
  else
    printf "missing dependency: filewatcher\n" >&2
    printf "%s\n" "Install with $(magenta gem install filewatcher-cli)" >&2
    exit 1
  fi

  # :command.command_filter
  action="last"

  # :command.parse_requirements_while
  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in
      # :flag.case
      --watch | -w)
        # :flag.conflicts
        if [[ -n "${args['--repeat']:-}" ]]; then
          printf "conflicting options: %s cannot be used with %s\n" "$key" "--repeat" >&2
          exit 1
        fi

        # :flag.case_no_arg
        args['--watch']=1
        shift
        ;;

      # :flag.case
      --repeat | -r)
        # :flag.conflicts
        if [[ -n "${args['--watch']:-}" ]]; then
          printf "conflicting options: %s cannot be used with %s\n" "$key" "--watch" >&2
          exit 1
        fi

        # :flag.case_no_arg
        args['--repeat']=1
        shift
        ;;

      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;

      *)
        # :command.parse_requirements_case
        # :command.parse_requirements_case_simple
        # :argument.case
        if [[ -z ${args['min']+x} ]]; then
          args['min']=$1
          shift
        else
          printf "invalid argument: %s\n" "$key" >&2
          exit 1
        fi

        ;;

    esac
  done

  # :command.default_assignments
  [[ -n ${args['min']:-} ]] || args['min']="10"

  # :command.validations
  # :argument.validations
  if [[ -v args['min'] && -n $(validate_integer "${args['min']:-}") ]]; then
    printf "validation error in %s:\n%s\n" "MIN" "$(validate_integer "${args['min']:-}")" >&2
    exit 1
  fi

}

